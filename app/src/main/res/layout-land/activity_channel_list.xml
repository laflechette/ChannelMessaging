<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="mathieu.larcher.channelmessaging.Fragment.ListChannelFragment"
        android:id="@+id/channel_list_fragment"
        tools:layout= "@layout/fragment_list_channel"/>

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="mathieu.larcher.channelmessaging.Fragment.MessageFragment"
        android:id="@+id/message_fragment"
        tools:layout= "@layout/fragment_message"/>
</LinearLayout>